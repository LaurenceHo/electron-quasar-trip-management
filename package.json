{
  "name": "electron-quasar-trip-management",
  "version": "0.0.1",
  "description": "An Electron Quasar desktop app",
  "productName": "Trip management app",
  "author": "Laurence Ho <bluegray.he@aol.com>",
  "private": true,
  "scripts": {
    "dev:electron": "quasar dev -m electron",
    "build:electron": "quasar build -m electron",
    "lint": "eslint --ext .js,.ts,.vue ./ && prettier --write ./src/**/*.{js,ts,vue,scss}",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@quasar/extras": "^1.0.0",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "luxon": "^3.0.1",
    "nedb-promises": "^6.0.3",
    "pinia": "^2.0.11",
    "quasar": "^2.6.0",
    "vue": "^3.0.0",
    "vue-router": "^4.0.0"
  },
  "devDependencies": {
    "@quasar/app-vite": "^1.0.0-alpha.0",
    "@types/lodash": "^4.14.182",
    "@types/luxon": "^2.3.1",
    "@types/node": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "autoprefixer": "^10.4.2",
    "electron": "^19.0.8",
    "electron-packager": "^15.5.1",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-vue": "^9.2.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": "^18 || ^16 || ^14.19",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  },
  "lint-staged": {
    "*.{js,ts,vue,scss}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5",
    "useTabs": false
  }
}
